CodeBlock: Vec<Statement> = {
	"{" <Statement*> "}" => <>
}

CodeBlockNew: CodeBlock = {
    "{" <stats: Statement*> <expr: Expr?> "}" => CodeBlock::new(stats, expr.map(Box::new)),
