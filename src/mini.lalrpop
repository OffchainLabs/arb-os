    <qualifiers: (<Qualifier>)*> <lno: @L> "closure" "(" <fa:FuncArgs> ")" <t: (Return)?> <cb:CodeBlock> => {
        let view = qualifiers.contains(&"view");
        let write = qualifiers.contains(&"write");
