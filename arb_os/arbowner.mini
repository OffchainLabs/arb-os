        uint(isFairGasPriceSender(address(bytearray_get256(calldata, 4)))),
    );
    if evmCallStack_setTopFrameMemory(mem) {
        evmOp_return(0, 32);
    } else {
        evmOp_revert_knownPc(171, 0, 0);
