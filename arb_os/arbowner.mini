    if bytearray_size(calldata) != 4 {
        evmOp_revert_knownPc(190, 0, 0);
    }
    let mem = bytearray_set256(bytearray_new(0), 0, uint(previousArbosUpgradeHash));
    if evmCallStack_setTopFrameMemory(mem) {
        evmOp_return(0, 32);
    } else {
        evmOp_revert_knownPc(191, 0, 0);
