type RateEstimator = struct {
    timeConstant: uint,
    maxEstimate: uint,
    estimate: uint,
    usageSince: uint,
    lastTimeSeen: uint,
};

public func rateEstimator_new(timeConstant: uint, maxEstimate: uint, initialEstimate: uint, currentTime: uint) -> RateEstimator {
    struct {
        timeConstant: timeConstant,
        maxEstimate: maxEstimate,
        estimate: initialEstimate,
        usageSince: 0,
        lastTimeSeen: currentTime,
    }
}

public func rateEstimator_get(ra: RateEstimator) -> uint {
    ra.estimate
}

public func rateEstimator_addUsage(ra: RateEstimator, newUsage: uint) -> RateEstimator {
    set ra.usageSince = ra.usageSince + newUsage;
    ra
}

public func rateEstimator_advanceTime(ra: RateEstimator, currentTime: uint) -> RateEstimator {
    if currentTime > ra.lastTimeSeen {
        let newEstimate = (ra.estimate * ra.timeConstant + ra.usageSince) / (ra.timeConstant + currentTime - ra.lastTimeSeen);
        set ra.estimate = if newEstimate > ra.maxEstimate { ra.maxEstimate } else { newEstimate };
        set ra.usageSince = 0;
        set ra.lastTimeSeen = currentTime;
    }
    ra
}