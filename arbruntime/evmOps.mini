public impure func evmOp_log0(
    memAddr: uint, 
    nbytes: uint
) {
    let data = bytearray_extract(
        evmCallStack_getTopFrameMemoryOrDie(),
        memAddr,
        nbytes
    );
    if (evmCallStack_addEvmLogToCurrent(
        (
            address(0),  // addEvmLogToCurrent will fill this in
            bytearray_marshalFull(data),
        )
    ) == Some(()) ) {
        return;
    }

    evm_runtimePanic();
    panic;
}

